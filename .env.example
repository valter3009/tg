# ==================================
# GidMeteo Bot Configuration
# ==================================

# Telegram Bot Token (обязательно)
# Получить у @BotFather в Telegram
TELEGRAM_TOKEN=your_telegram_bot_token_here

# OpenWeatherMap API Key (обязательно)
# Получить на https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweathermap_api_key_here

# Database URL (обязательно для продакшена)
# Для локальной разработки можно не указывать - будет использоваться SQLite
# Для Railway/Heroku переменная заполняется автоматически
# Формат для PostgreSQL: postgresql://user:password@host:port/database
# Формат для SQLite (локально): sqlite:///./gidmeteo.db
DATABASE_URL=postgresql://user:password@host:port/dbname

# ProjectEOL Token (опционально)
PROJECTEOL_TOKEN=

# Время жизни кеша погоды (в секундах)
# По умолчанию: 3600 (1 час)
WEATHER_CACHE_TTL=3600

# Интервал обновления кеша погоды (в секундах)
# По умолчанию: 600 (10 минут)
CACHE_UPDATE_INTERVAL=600

# Уровень логирования
# Возможные значения: DEBUG, INFO, WARNING, ERROR, CRITICAL
# По умолчанию: INFO
LOG_LEVEL=INFO
