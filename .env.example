# Telegram Bot Token (получить у @BotFather: https://t.me/BotFather)
TELEGRAM_TOKEN=your_telegram_bot_token_here

# OpenWeatherMap API Key (получить на https://openweathermap.org/api)
OPENWEATHER_API_KEY=your_openweathermap_api_key_here

# Database URL (опционально, по умолчанию используется SQLite)
# Для PostgreSQL: postgresql://user:password@localhost/dbname
DATABASE_URL=sqlite:///gidmeteo.db

# Weather cache TTL (время жизни кэша в секундах, по умолчанию 3600 = 1 час)
WEATHER_CACHE_TTL=3600

# Retry settings
MAX_RETRIES=3
RETRY_DELAY=1

# Logging
LOG_LEVEL=INFO
LOG_FILE=bot_errors.log

# Default timezone
DEFAULT_TIMEZONE=UTC

# Flask port (для Railway/Heroku)
PORT=8000
